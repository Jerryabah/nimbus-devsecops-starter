{
  "name": "nimbus-analytics-api",
  "version": "1.0.0",
  "description": "Nimbus Analytics - Security-hardened analytics API service",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:security": "npm audit && npm run test:security-unit",
    "test:security-unit": "jest --testPathPattern=security",
    "lint": "eslint .",
    "lint:security": "eslint . --config .eslintrc-security.js",
    "security:scan": "npm audit --audit-level=high",
    "security:check": "npm run lint:security && npm run security:scan",
    "docker:build": "docker build -t nimbus/analytics-api:latest .",
    "docker:scan": "trivy image nimbus/analytics-api:latest",
    "precommit": "npm run lint && npm run test && npm run security:check"
  },
  "keywords": [
    "analytics",
    "api",
    "security",
    "devsecops",
    "nodejs",
    "enterprise"
  ],
  "author": "Nimbus Analytics Security Team",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:security"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "eslint --config .eslintrc-security.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nimbus-analytics/devsecops-starter"
  },
  "bugs": {
    "url": "https://github.com/nimbus-analytics/devsecops-starter/issues"
  },
  "homepage": "https://github.com/nimbus-analytics/devsecops-starter#readme",
  "security": {
    "policy": "https://github.com/nimbus-analytics/devsecops-starter/blob/main/SECURITY.md",
    "contact": "security@nimbus-analytics.com"
  },
  "funding": {
    "type": "corporate",
    "url": "https://nimbus-analytics.com"
  }
}
